# 프로덕션 환경 설정 예시
# 사용법: cp env.production.example .env.production
# 주의: 이 파일은 예시입니다. 실제 프로덕션 환경에서는 보안 관리 시스템을 사용하세요.

# 환경
ENVIRONMENT=production

# 데이터베이스 (실제 값으로 변경 필요)
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_strong_db_password_here
POSTGRES_DB=swu_chatbot_prod
DATABASE_URL=postgresql://your_db_user:your_strong_db_password_here@postgres:5432/swu_chatbot_prod

# Redis (실제 값으로 변경 필요)
REDIS_URL=redis://:your_redis_password@redis:6379/0
REDIS_PASSWORD=your_strong_redis_password_here

# API Keys (실제 값으로 변경 필요)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# 백엔드 설정
LOG_LEVEL=INFO

# CORS (실제 도메인으로 변경 필요)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# 레이트 리미팅 (프로덕션 - 엄격한 제한)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

# 캐시 설정
CACHE_ENABLED=true
EMBEDDING_CACHE_TTL=86400
SEARCH_CACHE_TTL=3600
API_CACHE_TTL=300

# 프론트엔드 설정 (실제 URL로 변경 필요)
NODE_ENV=production
NEXT_PUBLIC_API_URL=https://api.your-domain.com

# 보안 (실제 값으로 변경 필요)
SECRET_KEY=your_secret_key_at_least_32_characters_long_here

# Gunicorn 설정
WORKERS=4
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# SSL/TLS (선택사항 - Let's Encrypt 등 사용 시)
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# 모니터링 (선택사항)
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# 백업 설정
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
